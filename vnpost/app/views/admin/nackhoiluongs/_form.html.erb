<style>
ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
}

li {
    display: inline;
}
</style>
<%= simple_form_for([:admin, nackhoiluong]) do |f| %>
 
<%= f.input :tennkl,label: "Tên nấc khối lượng" %>
<%= f.input :mota, label: "Mô tả" %>
<%= f.input :khoiluongbd, label: "Khối lượng bắt đầu" %>
<%= f.input :khoiluongkt, label: "Khối lượng kết thúc" %>
<ul id="action">
<li><%= f.button :submit, class: "btn-primary" %></li>
<li><%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                nackhoiluongs_path, class: "cancel" %></li>
</ul>
<% end %>