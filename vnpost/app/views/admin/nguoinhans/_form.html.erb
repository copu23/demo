<%= f.input :address, label: "Địa chỉ" %>
<%= f.input :tinh_id  ,label: "Tỉnh/TP" do %>

<%= f.collection_select :tinh_id,Tinh.all,:id,:tentinh, {:prompt=> "---Tỉnh---"} %>
