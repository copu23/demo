<td>
<% admins_only do %>
<td><%= link_to "Delete", [:admin,@vandon, @khachhang], method: :delete,
data: { confirm: "Bạn có chắc chắn xóa không"},
class: "delete" %>
                      <% end %>
</td>
</tr>
<% end %>
</tbody>
</table>


