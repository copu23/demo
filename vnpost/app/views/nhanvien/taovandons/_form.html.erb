<style>
ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
}

li {
    display: inline;
}
</style>


<%= simple_form_for([:nhanvien, taovandon]) do |f| %>

<%= f.input :hotenkh, label: "Họ và tên khách hàng", hint: "" %>

<%= f.input :diachi, label: "Địa chỉ" %>

<%= f.input :sdt, label: "Số điện thoại" %>
<%= f.input :khoiluong, label: "Khối lượng hàng hóa (gram)" %>
<%=f.select  :trangthai, options_for_select([ "Đã duyệt", "Đã hủy" ,"Chờ duyệt"], "Chờ duyệt") %>

<%= f.input :noinhan, label: "Nơi nhận"  %>

<%= f.button :submit, class: "btn-primary" %>
<%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                nhanvien_taovandons_path, class: "cancel" %>


<% end %>
